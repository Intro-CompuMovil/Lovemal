<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperarClave"
    android:background="@color/backGroundMenuApp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escriba el correo asociado a la cuenta para enviar un correo con las intrucciones de recuperaciÃ³n"
        android:layout_above="@+id/editTxtCorreo"
        android:textSize="20dp"
        android:background="@color/backGroundMenuApp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/editTxtCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo: "
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTxtCorreo"
        android:layout_marginTop="20dp"
        android:text="Enviar correo"
        android:backgroundTint="@color/buttonMenuApp"
        android:textColor="@color/black"/>

</RelativeLayout>