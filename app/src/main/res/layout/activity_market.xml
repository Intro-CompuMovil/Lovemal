<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/marketBackGrounud">

    <TextView
        android:id="@+id/encabezadoLoveMarket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOVEMAL MARKET PLACE"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@color/red" />

    <!-- Barra de bÃºsqueda -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar"
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:layout_margin="8dp"
        android:layout_below="@id/encabezadoLoveMarket"
        android:backgroundTint="@color/buttonMenuApp"/>

    <ListView
        android:id="@+id/petList"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchEditText"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
