<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foto_pet"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/txttype"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/foto_pet"
        android:text="Gato o perro"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/age_pet"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txttype"
        android:text="Edad"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:id="@+id/weight_pet"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txttype"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_toRightOf="@+id/age_pet"
        android:text="Peso"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:id="@+id/height_pet"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/age_pet"
        android:text="Altura"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:id="@+id/breed_pet"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/weight_pet"
        android:layout_toRightOf="@+id/height_pet"
        android:text="Raza"
        android:textSize="18sp"
        android:textColor="@color/dark_gray"/>

    <Button
        android:id="@+id/btnAdopt"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Adoptar"
        android:backgroundTint="@color/red"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/breed_pet"/>

</RelativeLayout>